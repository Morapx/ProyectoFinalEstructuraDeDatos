        <TextBlock Name="lDesSinop" HorizontalAlignment="Left" Margin="10,189,0,0" TextWrapping="Wrap" Text="Descripción:" VerticalAlignment="Top"/>
        <TextBox Name="tb_Descipcion" HorizontalAlignment="Left" Height="73" Margin="79,187,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="361"/>
        <TextBlock x:Name="l_Temporadas" HorizontalAlignment="Left" Margin="293,143,0,0" TextWrapping="Wrap" Text="Temporadas:" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_Temporadas" HorizontalAlignment="Left" Height="23" Margin="365,142,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="38"/>
